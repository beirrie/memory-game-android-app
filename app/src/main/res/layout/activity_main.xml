<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_200"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btnPlaySP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/light_yellow"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bungee"
        android:onClick="playClickHandlerSP"
        android:text="@string/playSP"
        android:textColor="#FF9800"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlayMP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlayMP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bungee"
        android:onClick="playClickHandlerMP"
        android:text="@string/playMP"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:backgroundTint="@color/light_yellow"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toTopOf="@+id/btnScoreBoard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnScoreBoard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/bungee"
        android:onClick="scoreBoardClickHandler"
        android:text="Score Board"
        android:backgroundTint="@color/light_yellow"
        android:textColor="#FF9800"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayMP" />

    <ImageView
        android:id="@+id/bgSoundIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="bgSoundHandler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/music_off" />

</androidx.constraintlayout.widget.ConstraintLayout>